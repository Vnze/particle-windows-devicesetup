<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="BackButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <BitmapIcon Margin="0,12" Foreground="{TemplateBinding Foreground}" UriSource="ms-appx:///Particle.Setup/Assets/Setup/Icons/IconBackArrow.png" />
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="NumberButton" TargetType="Button">
        <Grid Width="30" Height="30">
            <Ellipse Width="30" Height="30" Fill="{TemplateBinding Foreground}" />
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextLineBounds="Tight" Foreground="{TemplateBinding BorderBrush}" FontSize="20" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="RefreshButton" TargetType="Button">
        <Border Margin="0" Padding="0" Background="Transparent">
            <Grid>
                <BitmapIcon Margin="0,12" Foreground="{TemplateBinding Foreground}" UriSource="ms-appx:///Particle.Setup/Assets/Setup/Icons/IconRefresh.png" />
                <ProgressRing MinWidth="0" MinHeight="0" Background="Transparent" />
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
